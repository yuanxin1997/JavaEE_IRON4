<div class="container-fluid" >
    <div class="row">

        <div class="col-lg-3 col-md-6 animated zoomIn" ng-repeat="project in projects | filter:searchText">
            <div ng-class="getBackgroundColour(project.level)" class="card" style="border:none;">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-folder open fa-5x"></i>
                        </div>

                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ project.newMemo }}</div>
                            <div>New Memo!</div>
                        </div>

                    </div>
                </div>
                <a ui-sref="docNav.scheduleEdit({id:project.projectId})">
                    <div class="panel-footer">
                        <span class="pull-left"><b>H@H ID:</b> <strong>{{ project.projectId }}( {{project.fullName}} )</strong></span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>


    </div>
</div>