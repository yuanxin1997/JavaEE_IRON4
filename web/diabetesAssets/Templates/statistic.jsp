

<div class="container-fluid" ng-cloak="">

    <div class="card btmCard">

        <div class="row container" id="info-container">
            <div class="col-md-2">
                <select class="input-sm" ng-options="day for day in ['Today', 'Yesterday', 'Search...']"
                        ng-model="statisticCtrl.dayOption" ng-init="statisticCtrl.dayOption='Today'">
                </select>
            </div>
            <div class="col-md-3">
                <div ng-switch="statisticCtrl.dayOption">
                    <div ng-switch-when="Search...">
                        <link rel="stylesheet" href="diabetesAssets/css/datepicker.min.css">
                        <script src="diabetesAssets/js/datepicker.min.js"></script>
                        <script src="diabetesAssets/js/datepicker.en.js"></script>
                <input type="search" id="date" ng-model="statisticCtrl.selectedDate"  class="datepicker-here input-sm" placeholder="Search by date..." data-language='en'/>
                <button class="btn btn-warning btn-sm" type="button" ng-click="statisticCtrl.changeValue()"> <i class="glyphicon glyphicon-search"></i></button>
                    </div>
                    </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-lg-offset-0 col-md-10 col-md-offset-1">
                <div ng-switch="statisticCtrl.dayOption">
                    <div ng-switch-when="Today">
                        <nvd3 options='statisticCtrl.options1' data='statisticCtrl.data1'></nvd3>
                    </div>
                    <div ng-switch-when="Yesterday">
                        <nvd3 options='statisticCtrl.options2' data='statisticCtrl.data2'></nvd3>
                    </div>
                    <div ng-switch-when="Search...">
                        <nvd3 options='statisticCtrl.optionsN' data='statisticCtrl.dataN'></nvd3>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="card btmCard" id="adjust">
        <div>
            <nvd3 options='statisticCtrl.options3' data='statisticCtrl.data3'></nvd3>
        </div>
    </div>
</div>